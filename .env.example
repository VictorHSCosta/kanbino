# Application Environment
# Ambiente da aplicação (development, production, test)
NODE_ENV=development

# Server Configuration
# Porta do servidor HTTP
PORT=3000

# Logging Configuration
# Nível de log (debug, info, warn, error)
LOG_LEVEL=info

# Database Configuration (Optional)
# Host do banco de dados
# DATABASE_HOST=localhost

# Porta do banco de dados
# DATABASE_PORT=5432

# Usuário do banco de dados
# DATABASE_USERNAME=user

# Senha do banco de dados
# DATABASE_PASSWORD=

# Nome do database
# DATABASE_NAME=kanbino

# API Configuration
# URL base da API
API_BASE_URL=http://localhost:3000

# Timeout da API em milissegundos
API_TIMEOUT=30000

# Google OAuth Configuration
# Client ID do Google OAuth 2.0
GOOGLE_CLIENT_ID=your_google_client_id

# Client Secret do Google OAuth 2.0
GOOGLE_CLIENT_SECRET=your_google_client_secret

# URL de callback do Google OAuth
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# LinkedIn OAuth Configuration
# Client ID do LinkedIn OAuth 2.0
LINKEDIN_CLIENT_ID=your_linkedin_client_id

# Client Secret do LinkedIn OAuth 2.0
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# URL de callback do LinkedIn OAuth
LINKEDIN_CALLBACK_URL=http://localhost:3000/api/auth/linkedin/callback

# Session Configuration
# Segredo da sessão (gere uma string segura aleatória)
SESSION_SECRET=your_secure_session_secret_change_in_production

# Nome do cookie de sessão
SESSION_NAME=kanbino.sid

# Tempo de vida da sessão em milissegundos (7 dias)
SESSION_MAX_AGE=604800000

# OpenAI Configuration
# API Key do OpenAI para Vision API
OPENAI_API_KEY=your_openai_api_key

# Modelo a ser utilizado para análise de imagem
OPENAI_VISION_MODEL=gpt-4o

# Tamanho máximo de upload em bytes (10MB)
MAX_IMAGE_SIZE=10485760
