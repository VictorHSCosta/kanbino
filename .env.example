# Application Environment
# Ambiente da aplicação (development, production, test)
NODE_ENV=development

# Server Configuration
# Porta do servidor HTTP
PORT=3000

# Logging Configuration
# Nível de log (debug, info, warn, error)
LOG_LEVEL=info

# Database Configuration (Optional)
# Host do banco de dados
# DATABASE_HOST=localhost

# Porta do banco de dados
# DATABASE_PORT=5432

# Usuário do banco de dados
# DATABASE_USERNAME=user

# Senha do banco de dados
# DATABASE_PASSWORD=

# Nome do database
# DATABASE_NAME=kanbino

# API Configuration
# URL base da API
API_BASE_URL=http://localhost:3000

# Timeout da API em milissegundos
API_TIMEOUT=30000

# Pricing Configuration
# Preço mensal do plano Premium (em Reais)
PREMIUM_MONTHLY_PRICE=50

# Moeda (código ISO 4217)
CURRENCY=BRL

# Localização para formatação de preços
PRICING_LOCALE=pt-BR

# Payment Gateway (Opcional - futuro)
# Stripe Secret Key para processamento de pagamentos
# STRIPE_SECRET_KEY=

# Stripe Webhook Secret para verificação de webhooks
# STRIPE_WEBHOOK_SECRET=

